<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:height="24dp">
                <shape android:shape="rectangle">
                    <stroke android:color="@color/ghost" android:width="1sp"/>
                </shape>
            </item>
            <item android:width="25dp" android:height="24dp" android:gravity="end">
                <shape android:shape="rectangle" >
                    <stroke android:color="@color/ghost" android:width="1sp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_spinner"
                android:gravity="center|end" android:right="6dp"/>
        </layer-list>
    </item>
</selector>