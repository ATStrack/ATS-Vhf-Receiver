<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    tools:context=".TestReceiverActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/running_test_constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/test_complete_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_weight="6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/lb_test_complete"
                android:textColor="@color/dark"
                android:textSize="24dp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:padding="8dp"
                    android:columnCount="2"
                    android:rowCount="6"
                    android:background="@color/colortextbutton">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/lb_battery"
                        android:textColor="@color/dark"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/battery_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_gravity="end"
                        android:textColor="@color/dark"
                        android:textSize="18dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/lb_bytes_stored"
                        android:textColor="@color/dark"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/bytes_stored_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_gravity="end"
                        android:textColor="@color/dark"
                        android:textSize="18dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/lb_memory_used_percent"
                        android:textColor="@color/dark"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/memory_used_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_gravity="end"
                        android:textColor="@color/dark"
                        android:textSize="18dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/lb_frequency_tables"
                        android:textColor="@color/dark"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/frequency_tables_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_gravity="end"
                        android:textColor="@color/dark"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/table1_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:visibility="gone"
                        android:text="@string/lb_first_table"
                        android:textColor="@color/dark"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/first_table_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:layout_gravity="end"
                        android:textColor="@color/dark"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/table2_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:text="@string/lb_second_table"
                        android:textColor="@color/dark"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/second_table_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:layout_gravity="end"
                        android:textColor="@color/dark"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/table3_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:text="@string/lb_third_table"
                        android:textColor="@color/dark"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/third_table_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:layout_gravity="end"
                        android:textColor="@color/dark"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/table4_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:text="@string/lb_fourth_table"
                        android:textColor="@color/dark"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/fourth_table_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:layout_gravity="end"
                        android:textColor="@color/dark"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/table5_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:text="@string/lb_fifth_table"
                        android:textColor="@color/dark"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/fifth_table_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:layout_gravity="end"
                        android:textColor="@color/dark"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/table6_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:text="@string/lb_sixth_table"
                        android:textColor="@color/dark"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/sixth_table_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:layout_gravity="end"
                        android:textColor="@color/dark"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/table7_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:text="@string/lb_seventh_table"
                        android:textColor="@color/dark"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/seventh_table_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:layout_gravity="end"
                        android:textColor="@color/dark"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/table8_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:text="@string/lb_eighth_table"
                        android:textColor="@color/dark"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/eighth_table_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:layout_gravity="end"
                        android:textColor="@color/dark"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/table9_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:text="@string/lb_ninth_table"
                        android:textColor="@color/dark"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/ninth_table_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:layout_gravity="end"
                        android:textColor="@color/dark"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/table10_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:text="@string/lb_tenth_table"
                        android:textColor="@color/dark"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/tenth_table_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:layout_gravity="end"
                        android:textColor="@color/dark"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/table11_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:text="@string/lb_eleventh_table"
                        android:textColor="@color/dark"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/eleventh_table_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:layout_gravity="end"
                        android:textColor="@color/dark"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/table12_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:text="@string/lb_twelfth_table"
                        android:textColor="@color/dark"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/twelfth_table_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:layout_gravity="end"
                        android:textColor="@color/dark"
                        android:textSize="18dp"/>

                </GridLayout>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/connecting_device_testReceiver"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorbackground"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:padding="14dp"
                android:elevation="4dp"
                android:background="@color/colortextbutton">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="6">

                    <TextView
                        android:id="@+id/device_name_testReceiver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/text_button"/>

                    <TextView
                        android:id="@+id/device_address_testReceiver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colortext"
                        android:textSize="12dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_battery_full"/>

                    <TextView
                        android:id="@+id/percent_battery_testReceiver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="%75"
                        android:textSize="@dimen/text_size_caption"
                        android:textColor="@color/colortext"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/state_view"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/colorbutton"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>