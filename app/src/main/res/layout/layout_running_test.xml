<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="312sp"
    android:layout_height="186sp"
    android:orientation="vertical"
    android:visibility="visible"
    android:background="@color/catskill_white">

    <ImageView
        android:id="@+id/iv_ProgressGIF_testing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59sp"
        android:layout_gravity="center"
        android:background="@drawable/avd_anim_spinner_48"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43sp"
        android:gravity="center"
        android:text="@string/lb_running_test"
        android:textColor="@color/mountain_meadow"
        style="@style/subtitle"/>
</LinearLayout>